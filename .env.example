########################################
# Powersplit Environment Configuration #
########################################

# Core
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Database (Supabase Postgres URL or any Postgres DSN)
# Example: postgresql+psycopg2://user:password@host:5432/dbname
DATABASE_URL=postgresql+psycopg2://postgres:password@localhost:5432/postgres

# Siren (Messaging)
SIREN_API_KEY=
SIREN_WEBHOOK_SECRET=
SIREN_BASE_URL=https://api.siren.ai

# AI keys
SARVAM_API_KEY=
GEMINI_API_KEY=

# Security
# At least 32 chars
ENCRYPTION_KEY=please-change-me-to-a-strong-32-characters-secret-key

# Rate limits and timeouts (optional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
AI_SERVICE_TIMEOUT=30
AI_SERVICE_RETRY_ATTEMPTS=2
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
CONVERSATION_TIMEOUT_HOURS=24
MAX_CONVERSATION_RETRIES=3
UPI_TIMEOUT_MINUTES=30
PAYMENT_REMINDER_HOURS=24

TWILIO_ACCOUNT_SID=<SID>
TWILIO_AUTH_TOKEN=<TOKEN>